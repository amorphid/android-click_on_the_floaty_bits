<RelativeLayout
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.pope4president.clickonthefloatybits.MainActivity"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    >
    <RadioGroup
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:orientation="vertical"
        xmlns:android="http://schemas.android.com/apk/res/android"
        >
        <RadioButton android:id="@+id/test_click_view_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/test_click_view_id"
            />
        <RadioButton
            android:id="@+id/test_click_view_text"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="@string/test_click_view_text"
            />
        <RadioButton
            android:id="@+id/test_click_duplicate_view_text"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="@string/test_click_duplicate_view_text"
            />
    </RadioGroup>
</RelativeLayout>
